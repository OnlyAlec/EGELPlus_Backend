{
  "name": "admin-service",
  "version": "1.0.0",
  "description": "Microservice for Admin - EGEL",
  "main": "dist/server.js",
  "scripts": {
    "build": "prisma generate && tsc && npm run copy:prisma",
    "copy:prisma": "copyfiles -u 1 \"src/prisma/**/*\" dist/",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node\" src/server.ts",
    "prisma:generate": "prisma generate",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "questions",
    "files",
    "admin",
    "permissions",
    "express",
    "JS",
    "api"
  ],
  "author": "Eli",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@scalar/express-api-reference": "^0.8.24",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "npm": "^11.6.2",
    "paseto": "^3.1.4",
    "swagger-jsdoc": "^6.2.8",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
